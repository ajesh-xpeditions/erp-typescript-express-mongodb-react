{
  "name": "fiveby.one",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "12.*",
    "yarn": "1.*"
  },
  "devDependencies": {
    "concurrently": "5.2.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.0",
    "prettier": "2.0.5",
    "tslint": "6.1.2",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "5.0.0",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,js,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "install": "yarn install:backend && yarn install:frontend",
    "install:backend": "cd backend && yarn install",
    "install:frontend": "cd frontend && yarn install",
    "build": "yarn build:backend && yarn build:frontend",
    "build:backend": "cd backend && yarn build",
    "build:frontend": "cd frontend && yarn build",
    "start": "concurrently \"yarn start:backend\" \"yarn start:frontend\"",
    "start:db": "sudo mongod --dbpath /Users/prince/X/learnings/fullstack/data/test/ --port 27017",
    "start:backend": "cd backend && yarn start",
    "start:frontend": "cd frontend && yarn start",
    "lint": "yarn lint:backend && yarn lint:frontend",
    "lint:backend": "cd backend && yarn lint",
    "lint:frontend": "cd frontend && yarn lint",
    "test": "yarn test:backend",
    "test-backup": "yarn test:backend && yarn test:frontend",
    "test:backend": "cd backend && yarn test",
    "test:frontend": "cd frontend && yarn test",
    "serve": "cd backend && node build/server.js"
  }
}
