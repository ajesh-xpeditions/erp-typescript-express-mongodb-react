{
  "name": "fiveby.one",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "12.*",
    "yarn": "1.*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.30.0",
    "@typescript-eslint/parser": "2.30.0",
    "concurrently": "5.2.0",
    "eslint": "6.8.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-standard": "4.0.1",
    "typescript": "3.8.3"
  },
  "scripts": {
    "install": "yarn install:shared && yarn install:backend && yarn install:frontend",
    "install:backend": "cd backend && yarn install",
    "install:frontend": "cd frontend && yarn install",
    "install:shared": "cd shared && yarn install",
    "build": "yarn build:shared && yarn build:backend && yarn build:frontend",
    "build:backend": "cd backend && yarn build",
    "build:frontend": "cd frontend && yarn build",
    "build:shared": "cd shared && yarn build",
    "start": "concurrently \"yarn start:backend\" \"yarn start:frontend\"",
    "start:db": "sudo mongod --dbpath /Users/prince/X/learnings/fullstack/data/test/ --port 27017",
    "start:backend": "cd backend && yarn start",
    "start:frontend": "cd frontend && yarn start",
    "lint": "eslint -c .eslintrc.json '*/**/*.{js,ts,tsx}' --quiet --fix",
    "lint-back": "yarn lint:frontend",
    "lint:backend": "cd backend && yarn lint",
    "lint:frontend": "cd frontend && yarn lint",
    "test": "yarn test:backend",
    "test-backup": "yarn test:backend && yarn test:frontend",
    "test:backend": "cd backend && yarn test",
    "test:frontend": "cd frontend && yarn test",
    "serve": "cd backend && node build/server.js"
  }
}
